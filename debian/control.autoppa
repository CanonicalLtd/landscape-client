AUTOPPA_INCLUDE(feisty,gutsy,hardy,intrepid):Build-Depends-Indep: python-dev, python-central, lsb-release, gawk
Standards-Version: 3.8.0
XS-Python-Version: >= 2.4

Package: landscape-common
Architecture: all
Pre-Depends: python, python-gobject
AUTOPPA_INCLUDE(intrepid):Depends: ${python:Depends}, ${misc:Depends}, python-twisted-core, python-dbus, lsb-release, lsb-base, perl-modules,  python-gdbm,  ca-certificates, adduser
AUTOPPA_INCLUDE(dapper,feisty,gutsy,hardy):Depends: ${python:Depends}, ${misc:Depends}, python2.4-pysqlite2, python-twisted-core, python2.4-dbus, lsb-release, lsb-base, perl-modules,  python-gdbm,  ca-certificates, adduser
XB-Python-Version: ${python:Versions}
